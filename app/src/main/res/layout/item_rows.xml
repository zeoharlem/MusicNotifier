<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#222222"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <LinearLayout
        android:id="@+id/mainbody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <com.zeoharlem.frken.musicnotifier.Business.CircularTextViewBox
                android:id="@+id/timeRoot"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/oval_shape"
                android:layout_marginEnd="15dp"
                android:padding="10dp"
                android:text="17:25"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/phoneTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/timeRoot"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:fadingEdgeLength="3dp"
                android:maxLength="29"
                android:paddingStart="5dp"
                android:text="Alarm Time/Date clock"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/textReceiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phoneTag"
                android:layout_toEndOf="@+id/timeRoot"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:fadingEdgeLength="3dp"
                android:maxLength="29"
                android:paddingStart="5dp"
                android:text="MusicFile Name"
                android:textColor="#888888"
                android:textSize="13sp"
                android:textStyle="bold" />


            <!--            <ImageButton-->
            <!--                android:id="@+id/editMusic"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="10dp"-->
            <!--                android:layout_marginEnd="10dp"-->
            <!--                android:layout_toStartOf="@+id/editOptions"-->
            <!--                android:background="@null"-->
            <!--                android:src="@drawable/ic_hdr_weak_black_24dp" />-->

            <ImageButton
                android:id="@+id/editOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@+id/openMenuOptions"
                android:background="@null"
                android:src="@drawable/ic_tab_black_24dp" />

            <ImageButton
                android:id="@+id/openMenuOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:background="@null"
                android:src="@drawable/ic_close_black_24dp" />

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>